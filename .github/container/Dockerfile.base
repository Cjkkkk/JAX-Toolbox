ARG BASE_IMAGE=nvidia/cuda:12.1.0-devel-ubuntu22.04
FROM ${BASE_IMAGE}

RUN apt-get update && \
    apt-get install -y \
        git \
        python-is-python3 \
        python3-pip \
        libcudnn8 \
        libcudnn8-dev && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

RUN pip install --upgrade --no-cache-dir pip